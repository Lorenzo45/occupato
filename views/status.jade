extends layout

block content
  .statuses.fill
    .container.fill
      .row.fill
        .col-sm-12.fill
          div(class="col-sm-4 occupato-status occupato-mens occupato-#{ mens }")
            svg(class="icon icon-male vertical-align smallish-icons")
              use(xlink:href="#icon-male")


          div(class="col-sm-4 occupato-status occupato-womens occupato-#{ womens }")
            svg(class="icon icon-female vertical-align smallish-icons")
              use(xlink:href="#icon-female")


          div(class="col-sm-4 occupato-status occupato-shower occupato-#{ shower }")
            svg(class="icon icon-shower vertical-align smallish-icons")
              use(xlink:href="#icon-shower")

